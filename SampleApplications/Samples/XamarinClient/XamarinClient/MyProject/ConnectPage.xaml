<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinClient"
             x:Class="XamarinClient.ConnectPage"   
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Image Margin="50,120,50,120" Source="OpcUa.png" HorizontalOptions="Center"/>
            <Entry Text="opc.tcp://45.124.94.180:4852"
                   x:Name="EntryUrl"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   Margin="40,40,40,0"
                   FontAttributes="Bold"/>
            <Button Text="Connect"
                    x:Name="ConnectButton" 
                    Clicked="OnConnect"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    WidthRequest="325" 
                    BackgroundColor="#8ABDFF"
                    TextColor="White"
                    CornerRadius="30"/>
            <ActivityIndicator x:Name="ConnectIndicator" 
                IsRunning="False"
                Color="Gray"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>